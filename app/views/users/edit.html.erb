<h1>Users#edit</h1>

<h2>User info</h2>
 <%= form_with model: @user do |f| %>
 　<label for="inputName">Name</label>
   <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
   <label for="inputImage">Image</label>
   <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  
   <%= f.submit "ファイルを選択" %>
   <label for="inputImage">Introduction　下の枠内修正：要</label>
　　<%= f.label for: "inputIntroduction"  %>
    <%= f.text_field :introduction, autofocus: true, id: "inputIntroduction", placeholder: "自己紹介" %>
   <%= f.submit "Update User" %>
 <% end %>